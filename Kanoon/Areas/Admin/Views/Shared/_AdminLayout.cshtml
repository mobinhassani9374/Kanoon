<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/fontstyle.css">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/fontiran.css">
    <link rel="stylesheet" href="~/css/override.css">
    <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/fonts/font-fa.css" />
    <link rel="stylesheet" href="/lib/laddaButton/ladda-themeless.min.css" />

    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js//isotope.pkgd.min.js"></script>
    <script src="/lib/laddaButton/spin.min.js"></script>
    <script src="/lib/laddaButton/ladda.min.js"></script>


    <script src="/lib/vue/vue.min.js"></script>

    <link href="/lib/sweetalert/dist/sweetalert.css" rel="stylesheet" />
    <script src="/lib/sweetalert/dist/sweetalert.min.js"></script>


    <link href="/lib/toaster/toastr.min.css" rel="stylesheet" />
    <script src="/lib/toaster/toastr.min.js"></script>


</head>
<body>
    <header>
        <!-- navbar -->
        <nav class="navbar navbar-expand-md navbar-light">
            <button class="navbar-toggler mb-2 bg-light" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="container-fluid">
                <div class="row">
                    <!-- sidebar -->
                    <div class="col-xl-2 col-lg-3 col-md-4 sidebar fixed-top">
                    <a  class="navbar-brand text-white d-block mx-auto text-center py-3 mb-4 bottom-border">کانون مداحان</a>
                    <div class="d-flex justify-content-center align-self-center bottom-border pb-2">
                        <i class="fa fa-user-circle text-light fa-lg ml-3"></i>
                        <a class="text-white">سلام مهدی حسنی</a>
                    </div>
                    <ul class="navbar-nav flex-column text-right mt-2">
                        <li class="nav-item pl-3">
                        <a href="/admin" class="nav-link text-white p-2 mb-2" data-role="home"><i
                            class="fa fa-home text-light fa-lg ml-3"></i>داشبورد</a>
                        </li>

                        <li class="nav-item pl-3">
                        <a href="#" class="nav-link text-white p-2 mb-2 sidebar-link"><i
                            class="fa fa-user text-light fa-lg ml-3"></i>پروفایل</a>
                        </li>

                        <li class="nav-item pl-3">
                        <a href="#" class="nav-link text-white p-2 mb-2 sidebar-link"><i
                            class="fa fa-wrench text-light fa-lg ml-3"></i>تغییر رمز عبور</a>
                        </li>

                        <li class="nav-item pl-3">
                        <a href="#" class="nav-link text-white p-2 mb-2 sidebar-link"><i
                            class="fa fa-sign-out text-light fa-lg ml-3"></i>خروج</a>
                        </li>                                                                     
                    </ul>
                    </div>
                    <!--end of sidbar -->
                    <!-- top nav -->
                    <div class="col-xl-10 col-lg-9 col-md-8 mr-auto bg-dark fixed-top py-2 top-navbar">
                    <div class="row align-items-center">
                        <div class="col-md-9 text-right mt-1">
                            <h4 class="text-light">پنل ادمین آستان قدس رضوی منطقه ۱۸ تهران</h4>
                        </div>                        
                        <div class="col-md-3">
                        <ul class="navbar-nav">
                            <li class="nav-item icon-parent">
                            <a href="#" class="nav-link">
                                <i class="fa fa-comment text-muted fa-lg"></i>
                            </a>
                            </li>
                            <li class="nav-item icon-parent">
                            <a href="#" class="nav-link">
                                <i class="fa fa-bell text-muted fa-lg "></i>
                            </a>
                            </li>
                            <li class="nav-item">
                            <a href="#" class="nav-link" data-toggle="modal" data-target="#sing-out">
                                <i class="fa fa-sign-out text-danger fa-lg mr-auto"></i>
                            </a>
                            </li>
                        </ul>
                        </div>
                    </div>
                    </div>
                    <!-- end of top nav -->
                </div>
                </div>
            </div>
        </nav>
        <!-- end of navbar -->
    </header>
    <main>
        <div class="row">
            <div class="col-xl-10 col-lg-9 col-md-8 mr-auto">
                @RenderBody()
            </div>
        </div>
    </main>

    <script src="~/js/script.js"></script>
</body>
</html>
